name: netbeez-demo

topology:
  kinds:
    srl:
      # Uses custom container image containing Netbeez agent
      image: srl/netbeez-agent:latest
      license: ../license.key

  nodes:
    leaf1:  { kind: srl, config: leaf1.cfg.json }
    leaf2:  { kind: srl, config: leaf2.cfg.json }
    spine1: { kind: srl, config: spine1.cfg.json }

    h1:
      kind: linux
      image: alpine:latest # or frrouting/frr:latest
    h2:
      kind: linux
      image: alpine:latest # or frrouting/frr:latest
    

  links:
    - endpoints: ["leaf1:e1-1","spine1:e1-1"]
    - endpoints: ["leaf2:e1-1","spine1:e1-2"]

    - endpoints: ["h1:e1-1","leaf1:e1-3"]
    - endpoints: ["h2:e1-1","leaf2:e1-3"]


